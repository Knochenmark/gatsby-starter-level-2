.postCardLink
  text-decoration none

.postCard
  position relative
  color var(--title-color)
  margin-bottom var(--space)
  padding 0

  >a
    text-decoration none

  &Content
    padding var(--space) var(--space) 0

    h2
      color var(--link-color)
      margin 1rem 0

    p
      color var(--title-color)

.postTags
  margin 1rem 0 0
  padding 0 var(--space) var(--space)
